<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/store_recycler_view_row_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/store_recycler_view_buy_button"
        />

    <Button
        android:id="@+id/store_recycler_view_buy_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:gravity="center_vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/store_recycler_view_row_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:singleLine="false"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/store_recycler_view_row_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/store_recycler_view_buy_button"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
